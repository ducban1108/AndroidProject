<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@drawable/backgrounddep"
    tools:context=".HomeActivity">

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_width="250dp"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:background="@drawable/btngo"
            android:onClick="VaoGame"
            android:text="Vào game"
            android:textAllCaps="false"
            android:layout_width="300dp"
            android:layout_height="60dp" />
        <Button
            android:onClick="DiemCao"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:background="@drawable/btngo"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:id="@+id/btnDiemCao"
            android:text="Điểm cao"
            android:layout_width="300dp"
            android:layout_height="60dp" />
        <Button
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:background="@drawable/btngo"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:onClick="HuongDan"
            android:text="Hướng dẫn"
            android:layout_width="300dp"
            android:layout_height="60dp" />
        <Button
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:background="@drawable/btngo"
            android:textAllCaps="false"
            android:onClick="Thoat"
            android:layout_marginTop="10dp"
            android:text="Thoát"
            android:layout_width="300dp"
            android:layout_height="60dp" />
    </LinearLayout>

</LinearLayout>